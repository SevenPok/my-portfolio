---
interface Props {
  title: string;
  description: string;
  image: string;
  demo: string;
  tecnologies: any[];
  githubUrl?: string;
}

const card = Astro.props;
---

<!-- card -->
<div
  class="rounded-xl overflow-hidden shadow-lg bg-secondary-light dark:bg-gray-800 transition-all duration-300 transform hover:scale-105 hover:shadow-lg dark:shadow-none cursor-pointer"
>
  <img class="w-full h-72 object-cover" src={card.image} alt={card.title} width={300} height={300} loading="lazy" />
  <div class="p-6">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">{card.title}</h2>
    <p class="text-gray-700 dark:text-gray-300 mt-2">{card.description}</p>
    <div class="flex flex-wrap gap-2 mt-3">
      {
        card.tecnologies.map((tech) => (
          <span class="text-xs bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 px-2 py-1 rounded-full">
            {tech}
          </span>
        ))
      }
    </div>
    <div class="mt-4 flex gap-4">
      <button
        ><a href={card.demo} target="_blank" class="text-blue-600 dark:text-blue-400 font-semibold hover:underline"
          >Ver demo</a
        ></button
      >
      {
        card.githubUrl && (
          <button>
            <a href={card.githubUrl} target="_blank" class="text-gray-600 dark:text-gray-400 hover:underline">
              GitHub
            </a>
          </button>
        )
      }
    </div>
  </div>
</div>
