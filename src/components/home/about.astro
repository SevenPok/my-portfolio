---
import { Image } from "astro:assets";
import Sprite from "@/assets/sprite.svg?url";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="about" class="flex flex-col justify-center items-center scroll-mt-24 px-4">
  <div class="flex flex-col justify-center items-center max-w-4xl w-full">
    <div class="flip-container group relative size-56 md:size-64 lg:size-72 mb-4 rounded-full cursor-pointer">
      <div class="flip-inner w-full h-full relative rounded-full">
        <!-- Imagen frontal -->
        <Image
          src="/images/gerber_colindres.jpg"
          alt="Gerber Colindres"
          class="flip-front rounded-full border-8 border-secondary-light/80 dark:border-gray-800/80 shadow-lg absolute inset-0 w-full h-full object-cover"
          width={128}
          height={128}
          loading="eager"
        />

        <!-- Imagen trasera (hover) -->
        <Image
          src="/images/saber.webp"
          alt="Gerber Colindres"
          class="flip-back rounded-full border-8 border-secondary-light/80 dark:border-gray-800/80 shadow-lg absolute inset-0 w-full h-full object-cover"
          width={128}
          height={128}
          loading="eager"
        />
      </div>
    </div>
    <span
      class="text-sky-400 text-xl
      font-mono px-3 py-1
      border border-sky-500/50 rounded-full flex items-center justify-center shadow-sm
      bg-black/65
      cursor-crosshair
      z-10"
    >
      @sevenpok
      <svg class="ml-1 w-5 h-5 text-sky-400 inline" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
        <path
          fill-rule="evenodd"
          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707a1 1 0 00-1.414-1.414L9 11.172l-1.293-1.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
          clip-rule="evenodd"></path>
      </svg>
    </span>
    <h1 class="text-4xl font-extrabold leading-tight font-display mt-2">Gerber Colindres</h1>
    <div class="flex flex-col sm:flex-row items-center text-center gap-4 mt-4 w-full sm:w-auto">
      <!-- Github -->
      <a
        class="flex items-center justify-center gap-2 w-full sm:w-auto bg-zinc-900 dark:bg-zinc-950 rounded-full px-4 py-2 transition-all duration-300 transform hover:scale-105 shadow-lg border border-zinc-700 hover:bg-zinc-800 text-white font-semibold text-base"
        href="https://github.com/sevenpok"
        target="_blank"
        aria-label="GitHub"
        title={t("about.github.title")}
      >
        <svg class="w-5 h-5" fill="currentColor">
          <use xlink:href={Sprite + "#github"}></use>
        </svg>
        <span>GitHub</span>
      </a>
      <!-- LinkedIn -->
      <a
        class="flex items-center justify-center gap-2 w-full sm:w-auto bg-white dark:bg-[#1d263a] rounded-full px-4 py-2 transition-all duration-300 transform hover:scale-105 shadow-lg border border-blue-200 dark:border-blue-900 hover:bg-blue-50 dark:hover:bg-[#22305a] text-blue-700 dark:text-blue-300 font-semibold text-base"
        href="https://linkedin.com/in/gerber-colindres"
        target="_blank"
        aria-label="LinkedIn"
        title={t("about.linkedin.title")}
      >
        <svg class="w-5 h-5" fill="currentColor">
          <use xlink:href={Sprite + "#linkedin"}></use>
        </svg>
        <span>LinkedIn</span>
      </a>
      <!-- CV -->
      <a
        class="flex items-center justify-center gap-2 w-full sm:w-auto bg-white dark:bg-[#172032] rounded-full px-4 py-2 transition-all duration-300 transform hover:scale-105 shadow-lg border border-sky-200 dark:border-sky-900 hover:bg-sky-50 dark:hover:bg-[#1a253a] text-sky-700 dark:text-sky-300 font-semibold text-base"
        href={t("about.cv.url")}
        target="_blank"
        rel="noopener noreferrer"
        title={t("about.cv.title")}
      >
        <svg
          class="w-5 h-5 text-sky-500 dark:text-sky-300"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 2a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8.828a2 2 0 0 0-.586-1.414l-4.828-4.828A2 2 0 0 0 14.172 2H6zm7 1.414V8a1 1 0 0 0 1 1h4.586L13 3.414z"
          ></path>
        </svg>
        <span>{lang === "es" ? "Ver CV" : "View CV"}</span>
      </a>
    </div>
    <p class="text-center mt-4 text-balance" set:html={t("about.description")} />
  </div>

  <style>
    .flip-container {
      perspective: 1000px;
    }

    .flip-inner {
      transition: transform 0.8s;
      transform-style: preserve-3d;
    }

    .group:hover .flip-inner {
      transform: rotateY(180deg);
    }

    .flip-front,
    .flip-back {
      backface-visibility: hidden;
      -webkit-backface-visibility: hidden;
    }

    .flip-back {
      transform: rotateY(180deg);
    }
  </style>
</section>
