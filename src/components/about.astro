<section id="about" class="scroll-mt-24 py-16 bg-gray-50 dark:bg-gray-900 rounded-xl shadow-sm">
  <div class="mx-auto px-4 md:px-6">
    <div class="flex flex-col lg:flex-row items-center gap-8 md:gap-12">
      <!-- Columna izquierda - Imagen -->
      <div class="lg:w-1/3 xl:w-1/4 flex-shrink-0 flex flex-col items-center">
        <div class="relative group mb-6">
