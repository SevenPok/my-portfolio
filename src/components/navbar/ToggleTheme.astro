---
// ThemeToggle.astro
---

<button
  id="theme-toggle"
  name="theme-toggle"
  aria-label="Cambiar tema"
  class="p-3 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 cursor-pointer group transition-colors"
>
  <!-- Icono Luna (Modo Oscuro) - Se muestra cuando está en modo claro -->
  <svg
    class="w-4 h-4 block dark:hidden group-hover:text-blue-600 transition-colors"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
  </svg>

  <!-- Icono Sol (Modo Claro) - Se muestra cuando está en modo oscuro -->
  <svg
    class="w-4 h-4 hidden dark:block group-hover:text-blue-400 transition-colors"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m8.485-12.485l-.707.707m-11.314 0l-.707-.707m12.728 8.485h1M4.929 4.929l.707.707m11.314 0l-.707-.707M3 12h1m16 0h1m-9-9a9 9 0 110 18 9 9 0 010-18z"
    ></path>
  </svg>
</button>

<script>
  // Este script puede quedarse aquí porque solo maneja la interacción
  document.addEventListener("DOMContentLoaded", () => {
    const button = document.getElementById("theme-toggle");

    button?.addEventListener("click", () => {
      const html = document.documentElement;
      const isDark = html.classList.contains("dark");

      if (isDark) {
        html.classList.remove("dark");
        localStorage.setItem("theme", "light");
      } else {
        html.classList.add("dark");
        localStorage.setItem("theme", "dark");
      }
    });
  });
</script>
