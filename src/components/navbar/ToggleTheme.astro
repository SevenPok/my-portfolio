<button
  id="theme-toggle"
  name="theme-toggle"
  aria-label="Cambiar tema"
  class="p-3 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 cursor-pointer group"
>
  <!-- Icono Luna (Modo Oscuro) -->
  <svg
    class="w-4 h-4 hidden dark:block group-hover:text-blue-400"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
  </svg>

  <!-- Icono Sol (Modo Claro) -->
  <svg
    class="w-4 h-4 block dark:hidden group-hover:text-blue-600"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707"
    ></path>
  </svg>
</button>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const savedTheme = localStorage.getItem("theme");
    const systemDark = window.matchMedia("(prefers-color-scheme: light)").matches;

    // Prioridad: localStorage > preferencia sistema
    const initialTheme = savedTheme || (systemDark ? "dark" : "light");
    if (initialTheme === "dark") document.body.classList.add("dark");
  });

  document.getElementById("theme-toggle")?.addEventListener("click", () => {
    const isDark = document.body.classList.toggle("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");
  });
</script>
